<%- include('templates/head-admin-panel'); -%>
</head>
<%- include('templates/main-menu'); -%>
<body>
    <main>

        <section class="content library-search-user">
            <div>
                <h2>Lista de usuarios</h2>
                
            </div>
            <div class="content-list">
                <label for="search-user">Buscar Usuario</label>
                <input type="text" id="input-search-user" name="search-user">
                <ul id="user-list"></ul>
            </div>
        </section>
        <section class="content library-search">
            <div>
                <h2>Buscar libro de la Biblioteca</h2>
            </div>
            <div class="content-list">
                <label for="search-book">Buscar Libro</label>
                <input type="text" id="input-search-book">
                <ul id="book-list"></ul>
                
            </div>
        </section>
        <section class="content library-options">
        
        <div class="option" id="book-management">
            <h2>Gestión de Libros</h2>
            <form id="book-form">
                <label for="isbn">Isbn:</label>
                <input type="text" id="input-isbn" name="isbn" required>

                <label for="title">Título:</label>
                <input type="text" id="input-title" name="title" required>

                <label for="author">Autor:</label>
                <input type="text" id="input-author" name="author" required>

                <label for="genre">Género:</label>
                <input type="text" id="input-genre" name="genre">

                <label for="publisher">Editor:</label>
                <input type="text" id="input-publisher" name="publisher" required>
                
                <label for="publicationYear">Año de publicación:</label>
                <input type="number" id="input-publicationYear" name="publicationYear" min="1900" max="2100" required>


                <label for="location">Ubicación</label>
                <input type="text" id="input-location" name="location">

                <label for="summary">Resumen:</label>
                <input type="text" id="input-summary" name="summary">

                

                <button id="add-book" type="submit" class="btn btn-primary w-50">Agregar Libro</button>
                
            </form>
        </div>

        <!-- Gestión de Usuarios -->
        <div class="option" id="user-management">
            <h3>Gestión de Usuarios</h3>
            <form id="user-form">
                <label for="name">User id:</label>
                <input type="number" id="input-id" name="id" required>

                <label for="name">Nombre:</label>
                <input type="text" id="input-name" name="name" required>

                <label for="email">Correo Electrónico:</label>
                <input type="email" id="input-email" name="email" required>

                <label for="role">Rol</label>
                <select id="input-role" name="role" required>
                    <option value="admin">Administrador</option>
                    <option value="user">Usuario</option>
                    <option value="guest">Invitado</option>
                </select>

                <button id="add-user" type="submit" class="btn btn-primary w-50">Agregar Usuario</button>
            </form>
        </div>
        </section>
    </main>
<%- include('templates/footer'); -%>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script type="module" src="../scripts/main.js"></script>
</body>
</html>