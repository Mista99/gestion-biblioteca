<%- include('templates/header-us-panel'); -%>
    <link rel="stylesheet" href="styles-user-panel.css">
</head>
<%- include('templates/main-menu'); -%>
<div class="container mt-4">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="loans-tab" href="#" role="tab" aria-controls="loans" aria-selected="true">Ver préstamos</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="books-tab" href="#" role="tab" aria-controls="books" aria-selected="false">Ver libros disponibles</a>
        </li>
    </ul>

    <!-- paneles -->
    <div class="tab-content mt-3" id="myTabContent">
        <div class="tab-pane fade show active" id="loans" role="tabpanel" aria-labelledby="loans-tab">
            <div id="user-loans">
                <!-- Aquí se mostrarán los préstamos del usuario -->
                <!-- <button class="btn btn-primary extend-loan" data-user-id="<%= user.id %>">Ampliar Plazo</button> -->
            </div>
        </div>
        <div class="tab-pane fade" id="books" role="tabpanel" aria-labelledby="books-tab">
            <div class="search-bar mb-3">
                <input type="text" id="search-input" class="form-control" placeholder="Buscar libros...">
            </div>
            <div id="library-books">
                <!-- Aquí se mostrarán todos los libros de la biblioteca -->
            </div>
        </div>
    </div>
</div>

<!-- Mensaje de éxito -->
<div id="success-message" class="alert alert-success alert-dismissible fade" role="alert" style="display: none; position: fixed; bottom: 20px; left: 50%; transform: translateX(-50%); z-index: 1000;">
    <strong></strong>
    <div class="alert-message">
    </div>
    <button type="button" class="btn-close" aria-label="Close" onclick="hideMessage('success-message')"></button>
</div>

<!-- Mensaje de error -->
<div id="error-message" class="alert alert-danger alert-dismissible fade" role="alert" style="display: none; position: fixed; bottom: 20px; left: 50%; transform: translateX(-50%); z-index: 1000;">
    <strong></strong>
    <div class="alert-message">
    </div>
    <button type="button" class="btn-close" aria-label="Close" onclick="hideMessage('error-message')"></button>
</div>


<%- include('templates/footer'); -%>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="./scripts/user-panel.js"></script>
</body>
</html>
